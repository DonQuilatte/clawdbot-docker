# Clawdbot Environment Configuration
# Copy this file to .env and customize as needed

# Data Storage
# Path to persistent data storage (config, logs, cache)
CLAWDBOT_HOME_VOLUME=/Users/yourusername/Development/clawdbot-workspace/data

# Gateway Configuration
# Port for the Clawdbot Gateway API
CLAWDBOT_GATEWAY_PORT=3000

# Bind address for the gateway (localhost for security)
CLAWDBOT_GATEWAY_BIND=localhost

# Logging
# Log level: debug, info, warn, error
CLAWDBOT_LOG_LEVEL=info

# Optional: Custom Docker Network
# CLAWDBOT_NETWORK_SUBNET=172.28.0.0/16

# Optional: Resource Limits
# CLAWDBOT_GATEWAY_CPU_LIMIT=2
# CLAWDBOT_GATEWAY_MEMORY_LIMIT=4G
