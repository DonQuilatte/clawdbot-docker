{
  "name": "dev-infra",
  "version": "1.0.0",
  "description": "Distributed development infrastructure for Mac environments",
  "private": true,
  "scripts": {
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "shellcheck scripts/**/*.sh tests/**/*.sh",
    "preflight": "./config/preflight-check.sh",
    "deploy": "./scripts/deploy-secure.sh",
    "verify": "./scripts/verify-security.sh",
    "agents:wave1": "./scripts/agent-tasks/dispatch-all.sh wave1",
    "agents:wave2": "./scripts/agent-tasks/dispatch-all.sh wave2",
    "agents:wave3": "./scripts/agent-tasks/dispatch-all.sh wave3"
  },
  "devDependencies": {
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/unit/**/*.test.js"
    ],
    "verbose": true,
    "collectCoverageFrom": [
      "tests/**/*.js",
      "!tests/**/*.test.js"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DonQuilatte/dev-infra"
  },
  "keywords": [
    "infrastructure",
    "docker",
    "deployment",
    "distributed",
    "clawdbot"
  ],
  "license": "MIT"
}
